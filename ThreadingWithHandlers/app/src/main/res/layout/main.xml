<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
        android:id="@+id/button1"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
            android:text="@string/download_image" />

    <TextView
        android:id="@+id/msger1"
        android:layout_below="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/msger2"
        android:layout_below="@+id/msger1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/players_heading"
        android:layout_below="@id/msger2"
        android:text="PLAYERS"/>

    <TextView
        android:id="@+id/p1"
        android:layout_below="@+id/players_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/p2"
        android:layout_below="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/players_heading"
        android:layout_alignBottom="@+id/players_heading"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text=""
        android:gravity="bottom"
        android:maxLines="3"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/p1guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hint"
        android:layout_toEndOf="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:text=""
        android:gravity="bottom"
        android:maxLines="3"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/p2guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/p1guess"
        android:layout_alignRight="@+id/p1guess"
        android:layout_below="@+id/p2"
        android:text=""
        android:gravity="bottom"
        android:maxLines="3"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/hint_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p2guess"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/p2guess"
        android:layout_toRightOf="@+id/p2guess"
        android:text=""
        android:gravity="bottom"
        android:maxLines="3"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/p2guess"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/p2guess"
        android:layout_marginTop="263dp"
        android:text="status" />

    <TextView
        android:id="@+id/p1guessheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msger2"
        android:layout_toLeftOf="@+id/status"
        android:layout_toStartOf="@+id/status"
        android:text="P1" />

    <TextView
        android:id="@+id/p2guesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hint_p2"
        android:layout_alignLeft="@+id/p1guessheading"
        android:layout_alignStart="@+id/p1guessheading"
        android:text="P2" />

</RelativeLayout>


